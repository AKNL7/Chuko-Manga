{% extends 'base.html.twig' %}

{% block seo %}
	<meta
	name="description" content="Contactez Chuko Manga pour toute question ou assistance. Notre équipe est là pour vous aider avec vos annonces, vos achats ou toute autre demande. Nous serons ravis de vous aider !">
	<!--Seo Réseaux-->
	<meta property="og:title" content="Chuko Manga">
	<meta property="og:type" content="website">
	<meta property="og:description" content="Contactez Chuko Manga pour toute question ou assistance. Notre équipe est là pour vous aider avec vos annonces, vos achats ou toute autre demande. Nous serons ravis de vous aider !">
	<meta property="og:image" content="public\LogoChukoManga5.ico">
	<meta property="og:site_name" content="Chuko Manga">
	<meta property="og:url" content="{{ app.request.getSchemeAndHttpHost() }}">
{% endblock %}


{% block title %}Contact
{% endblock %}

{% block body %}
	<section class="contact">
		<div class="banner">
			<img src="{{ asset('./images/banner/bannerChuko4.png') }}" alt="Banner Image">
			<div class="category_title">Contact</div>
		</div>

		<div
			class="contact-form-container">


			{# Début du formulaire de contact #}
			{{ form_start(contactForm) }}

			{# Display success flash message #}
			{% for message in app.flashes('send') %}
				<div class="alert alert-success">
					{{ message }}
				</div>
			{% endfor %}

			{{ form_row(contactForm.email, {'attr': {'class': 'box', 'placeholder': 'Email'}}) }}

			{{ form_row(contactForm.message, {'attr': {'class': 'box', 'placeholder': 'Message'}}) }}

			{# <input
						type="submit" value="Send message" class="btn"> #}


			{# Fin du formulaire de contact #}
		{{ form_end(contactForm) }}
	</div>
</section>{% endblock %}
