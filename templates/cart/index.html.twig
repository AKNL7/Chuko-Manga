{% extends 'base.html.twig' %}

{% block title %}Panier
{% endblock %}

{% block body %}

	{% if items|length > 0 %}
		<table class="table">
			<thead>
				<tr>
					<th>Titre</th>
					<th>Condition</th>
					<th>Prix</th>
					<th>Quantité</th>
					<th>Total</th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody>
				{% for item in items %}
					<tr>
						<td>{{ item.product.postTitle }}</td>
						<td>{{ item.product.postCondition }}</td>
						<td>{{ item.product.postPrice }}</td>
						<td>{{ item.quantity }}</td>
						<td>{{ item.product.postPrice * item.quantity }}</td>
						<td>
							<a href="{{ path('app_cart_add', {'id': item.product.id}) }}">Ajouter</a>
							<a href="{{ path('app_cart_less', {'id': item.product.id}) }}">Retirer</a>
							<a href="{{ path('app_cart_remove', {'id': item.product.id}) }}">Supprimer</a>
						</td>
					</tr>
				{% endfor %}
			</tbody>
			<tfoot>
				<tr>
					<td colspan="4">Total :</td>
					<td>{{ total }}</td>
					<td></td>
					<!-- Vous pouvez laisser vide pour la dernière colonne -->
				</tr>
			</tfoot>
		</table>

		<a href="{{ path('app_buy', {'id': items[0].product.id}) }}" class='btn'>Valider le panier</a>

		<a href="{{ path('app_home') }}" class="btn">Continuer vos achats</a>

	{% else %}
		<p>Votre panier est vide</p>
	{% endif %}

{% endblock %}

