{% extends 'base.html.twig' %}

{% block title %}Category
{% endblock %}

{% block body %}

	<section class="products">
		<h1 class="heading">Toutes les annonces de la catégorie "{{ category.name }}"</h1>

		<div class="box-container">
			{% for post in posts %}
				<form action="" method="post" class="box">
					<input type="hidden" name="pid" value="product_id">
					<input type="hidden" name="name" value="product_name">
					<input type="hidden" name="price" value="product_price">
					<input type="hidden" name="image" value="product_image">

					<a href="{{ path('app_quick_view', {'id': post.id} ) }}" class="fas fa-eye"></a>

					{% for file in post.postImages %}
						<img src="{{ asset('uploads/' ~ file.postImage) }}" alt="postimage">
					{% endfor %}

					<div class="name">{{ post.postTitle }}</div>
					<div class="flex">
						<div class="price">
							<span>{{ post.postPrice }}</span>
							<span>€</span>
						</div>
					</div>
					<a href="{{ path('app_cart_add', {'id': post.id}) }}" class="btn">Ajouter au panier</a>
				</form>
			{% endfor %}
		</div>
	</section>

{% endblock %}

