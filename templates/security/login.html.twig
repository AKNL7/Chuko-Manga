{% extends 'base.html.twig' %}

{# Lorsqu'un utilisateur a verifier son email il est rediriger ici #}
{% block stylesheetsVisibility %}
<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200"/>

{% endblock %}

{% block title %}Connectez Vous
{% endblock %}

{% block body %}

	{# Message de succes qui s'affiche lorsque le User a bien verifier son email  #}
	{% for flash_success in app.flashes('sucess') %}
		<div class="alert alert-sucess" role="alert">{{ flash_sucess }}</div>
	{% endfor %}

	<section class="form-container">


		<form method="post">
			{% if error %}
				<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
			{% endif %}

			{% if app.user %}
				<div class="mb-3">
					You are logged in as
					{{ app.user.userIdentifier }},
					<a href="{{ path('app_logout') }}">Logout</a>
				</div>
			{% endif %}

			{# <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1> #}
			<h3>CONNECTEZ VOUS</h3>

			{# <label for="inputEmail">Email</label> #}

			<input
			type="email" name="email" required value="{{ last_username }}" placeholder=" email" maxlength="50" class="box" oninput="this.value = this.value.replace(/\s/g, '')" id="inputEmail">


			{# <label class="label-eye" for="inputPassword">Password #}
			<input
			type="password" class="box" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required placeholder="password" maxlength="20" oninput="this.value = this.value.replace(/\s/g, '')">


			{# Cacher oou Montrer le password #}
			<div class="password-icon">
				<span class="material-symbols-outlined-eye-off">visibility_off</span>
				<span class="material-symbols-outlined-eye-on">visibility</span>
			</div>
		</label>

		<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

		<div class="checkbox-container">
			<div class="checkbox">
				<label>
					<input type="checkbox" name="_remember_me">
					Se souvenir de moi
				</label>
			</div>

<a href={{path('app_forgot_password_request')}}>Mot de passe oubli√©</a>


		</div>
		<button class="btn" type="submit" value="login now" name="submit">
			Se connecter
		</button>

		{# Ici le lien pour s'inscrire qui envoie a "app_register #}
		<p>Pas encore de compte ? Inscrivez vous</p>
		<a href="{{path('app_register')}}" class="option-btn">S'inscrire</a>


	</form>

</section>{% endblock %}
