{% extends 'base.html.twig' %}

{# Lorsqu'un utilisateur a verifier son email il est rediriger ici #}
{% block stylesheets %}
	<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200"/>

{% endblock %}
{% block title %}Connecter Vous
{% endblock %}

{% block body %}

	{# Message de succes qui s'affiche lorsque le User a bien verifier son email  #}
	{% for flash_success in app.flashes('sucess') %}
		<div class="alert alert-sucess" role="alert">{{ flash_sucess }}</div>
	{% endfor %}

	<form method="post">
		{% if error %}
			<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
		{% endif %}

		{% if app.user %}
			<div class="mb-3">
				You are logged in as
				{{ app.user.userIdentifier }},
				<a href="{{ path('app_logout') }}">Logout</a>
			</div>
		{% endif %}

		<h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
		<label for="inputEmail">Email</label>
		<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
        
		<label class="label-eye" for="inputPassword">Password
			<input
			type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

			{# Cacher oou Montrer le password #}
			<div class="password-icon">
				<span class="material-symbols-outlined-eye-off">visibility_off</span>
				<span class="material-symbols-outlined-eye-on">visibility</span>
			</div>
		</label>

		<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

		<div class="checkbox mb-3">
			<label>
				<input type="checkbox" name="_remember_me">
				Remember me
			</label>
		</div>

		<a href="#app_forgit_password">Mot de passe oubli√©</a>

		<button class="btn btn-lg btn-primary" type="submit">
			Sign in
		</button>

		{# Ici le lien pour s'inscrire qui envoie a "app_register #}
	</form>
{% endblock %}
